[Unit]
Description=Lock the screen automatically after a timeout

[Service]
Type=simple
User=chansol0505
Environment=DISPLAY=:0
EnvironmentFile=/home/chansol0505/.config/i3/screen_lock.conf
ExecStart=/usr/bin/xautolock -time 3 -locker "/usr/bin/i3lock-fancy -f NanumGothic -t $TEXT"  -detectsleep

[Install]
WantedBy=graphical.target
