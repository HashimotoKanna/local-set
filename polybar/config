[module/clock]
type = custom/script
interval = 1
;exec = echo "$(date +%r)"
exec = echo "ÔÄó $(date +%R)"
format = <label>
label = %{A1:gsimplecal &:}%output%%{A}
label-foreground = ${colors.yellow}
format-padding = 1

[module/calender]
type = custom/script
interval = 1
