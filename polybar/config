[module/blue-off]
type = custom/script
interval = 3
format = <label>
label = "%output:0:30%"
exec = ~/.config/polybar/bluetooth-off.sh
click-left = blueberry &

[module/blue-on]
type = custom/script
interval = 3
format = <label>
format-foreground = ${colors.foreground-alt}
label = "%output:0:30%"
exec = ~/.config/polybar/bluetooth-on.sh
click-left = blueberry &

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
label-mode = %mode%
index-sort = true
pin-workspaces = true
wrapping-scroll = false
label-mode-padding = 0
label-mode-foreground = #000


label-mode-background = ${colors.foreground}
label-focused = %index%
;label-focused-font = 4
label-focused-foreground = ${colors.background}
label-focused-background = #41D3BD
label-focused-padding = 2
label-unfocused = %index%
;label-unfocused-font = ${self.label-focused-font}
label-unfocused-background = ${colors.background}
label-unfocused-foreground = ${colors.foreground-alt}
label-unfocused-padding = ${self.label-focused-padding}
label-visible = %index%
;label-visible-font = ${self.label-focused-font}
label-visible-background = ${colors.background}
label-visible-padding = ${self.label-focused-padding}
label-urgent = %icon%!
;label-urgent-font = ${self.label-focused-font}
label-urgent-background = ${colors.background}
label-urgent-padding = ${self.label-focused-padding}


